{
    "name": "tracer-study/app",
    "description": "Tracer Study application built with CodeIgniter 4.",
    "type": "project",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.5",
        "fakerphp/faker": "^1.22"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mikey179/vfsstream": "^1.6",
        "psalm/plugin-phpunit": "^0.19.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-autoload-dump": [
            "[ -f spark ] || php vendor/codeigniter4/framework/spark --appname=TracerStudy"
        ]
    }
}
